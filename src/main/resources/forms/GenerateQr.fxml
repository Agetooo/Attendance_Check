<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" styleClass="root" stylesheets="@/styles/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.GenerateQrController">
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>

   <top>
      <Label styleClass="main-title" text="Generate QR Code">
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </Label>
   </top>

   <center>
      <TableView fx:id="tableView" prefHeight="400.0">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
            <TableColumn fx:id="colGender" prefWidth="80.0" text="Gender" />
            <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="colContact" prefWidth="120.0" text="Contact" />
            <TableColumn fx:id="colAddress" prefWidth="250.0" text="Address" />
         </columns>
      </TableView>
   </center>

   <right>
      <VBox alignment="TOP_CENTER" spacing="15.0">
         <BorderPane.margin>
            <Insets left="20.0" />
         </BorderPane.margin>
         <children>
            <VBox alignment="CENTER" spacing="15.0" styleClass="image-container">
               <children>
                  <ImageView fx:id="viewQR" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
                  <Label styleClass="image-caption" text="Generated QR Code" />
               </children>
            </VBox>
            <Button fx:id="btnSaveQR" onAction="#handleSaveQR" text="Save QR" styleClass="primary-button" maxWidth="Infinity" />
            <Button fx:id="btnbtnSaveQRAt" onAction="#handleSaveQRAt" text="Save QR As..." styleClass="secondary-button" maxWidth="Infinity" />
         </children>
      </VBox>
   </right>

</BorderPane>