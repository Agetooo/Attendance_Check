<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.EnrollmentController">
   <children>
       <ImageView fx:id="camView" fitHeight="480" fitWidth="640" />
       <TextField fx:id="tfUserId" promptText="Nhập ID Người dùng (ví dụ: 101)" />
       <Button fx:id="btnCapture" onAction="#handleCaptureButton" text="Bắt đầu Chụp (Giữ 100 ảnh)" />
       <Label fx:id="lbCount" text="Số ảnh đã chụp: 0" />
   </children>
</VBox>
