<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="800.0" styleClass="root" stylesheets="@/styles/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.EnrollmentController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="form-container" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <Label styleClass="form-title" text="Face Enrollment" />
                <Label styleClass="form-label" text="Register Your Face Data" />

                <VBox alignment="CENTER" styleClass="image-container">
                    <children>
                        <ImageView fx:id="camView" fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" />
                    </children>
                </VBox>

                <VBox alignment="CENTER" spacing="10.0" maxWidth="400.0">
                    <children>
                        <TextField fx:id="tfUserId" promptText="Nhập ID Người dùng (ví dụ: 101)" styleClass="text-field" />
                        <Button fx:id="btnCapture" onAction="#handleCaptureButton" text="Bắt đầu Chụp (Giữ 100 ảnh)" styleClass="primary-button" maxWidth="Infinity" />
                        <Label fx:id="lbCount" text="Số ảnh đã chụp: 0" styleClass="form-label" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>