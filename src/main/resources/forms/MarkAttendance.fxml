<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="768.0" prefWidth="1366.0" styleClass="root" stylesheets="@/styles/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MarkAttendanceController">
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>

   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label styleClass="main-title" text="Mark Attendance" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lbTime" styleClass="time-display" text="Time" />
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" />
         </BorderPane.margin>
      </HBox>
   </top>

   <left>
      <VBox alignment="TOP_CENTER" prefWidth="400.0" spacing="15.0">
         <children>
            <VBox alignment="CENTER" styleClass="image-container">
               <children>
                  <ImageView fx:id="camView" fitHeight="247.0" fitWidth="371.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>

            <VBox spacing="10.0">
               <children>
                  <Label styleClass="form-label" text="Session Controls" />
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="btnStartSession" onAction="#handleStartSession" styleClass="primary-button" text="Start Session" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnEndSession" onAction="#handleEndSession" styleClass="secondary-button" text="End Session" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </VBox>

            <VBox spacing="10.0">
               <children>
                  <Label styleClass="form-label" text="Camera Controls" />
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="btnResume" onAction="#handleResume" styleClass="primary-button" text="Resume Camera" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnStopCam" onAction="#handleStopCam" styleClass="delete-button" text="Stop Camera" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </left>

   <center>
      <TableView fx:id="attendanceTable">
         <BorderPane.margin>
            <Insets left="25.0" />
         </BorderPane.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
            <TableColumn fx:id="colEmail" prefWidth="120.0" text="Email" />
            <TableColumn fx:id="colCheckin" prefWidth="250.0" text="Check in" />
            <TableColumn fx:id="colCheckout" prefWidth="250.0" text="Check out" />
         </columns>
      </TableView>
   </center>

</BorderPane>